            <TextView
                android:id="@+id/lisboa_rateus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already been here? Talk about your experience!"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/show_rating_lisboa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/lisboa_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5" />

            <EditText
                android:id="@+id/lisboa_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Give your review"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/lisboa_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="submit review" />

            <TextView
                android:id="@+id/blank_lisboa6"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
