                android:id="@+id/ac_3"
                android:layout_width="match_parent"
                android:layout_height="257dp"
                app:srcCompat="@drawable/ac_3" />

            <TextView
                android:id="@+id/blank_ac1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ac_description3"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="This hotel will not dissapoint you. If you like luxury, this is your place."
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ac_place"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                app:srcCompat="@drawable/ac_place" />

            <TextView
                android:id="@+id/ac_blank5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ac_rateus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
