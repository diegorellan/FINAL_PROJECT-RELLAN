                android:id="@+id/blank_lisboa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lisboa_description3"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="Ready for your travel? Book right away!"
